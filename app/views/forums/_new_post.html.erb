<% form_for(:post, :url => {:controller => 'forums', :action => 'create_post'}, 
                      :html => { :multipart => true }) do |f| -%>
<p><label for="email">Title</label><br />
<%= f.text_field :title %></p>
<p><label for="email">Body</label><br />
<%= f.text_area :body %></p>
<p>	
	<%= hidden_field_tag("forum_id", @forum.id) %>
	<div id="fifteenpxspacer"></div>

<div id="fifteenpxspacer"></div>

<%= submit_tag 'Create' %> or <%= link_to_remote ('Cancel', :url => {:action => 'new_post_form'}) %>
</p>
<% end -%>
<div id="fifteenpxspacer"></div>
