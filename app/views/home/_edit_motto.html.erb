<div style="background: #ffffff; padding: 5px;">
<%= error_messages_for :user %>
<% form_for(:user, :url => {:action => 'edit_motto'}, 
                      :html => { :multipart => true }) do |f| -%>
  <p>
    Edit Status<br />
    <%= f.text_area :motto, :rows => 4, :cols => 19%>
  </p>
<br />
  <p>
    <%= submit_tag 'Update' %> or <%= link_to_remote ('Cancel', :url => {:action => 'toggle_edit_motto'}) %>
  </p>
<% end -%>
</div>