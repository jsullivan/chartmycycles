<div id="contentwrapper">
<div id="contentcolumn">
	<div id="new_entry_form" style="display: none;">
	 <%= render :partial => 'new_entry'%>
	</div>
	<div id="myhome" class="little_gray_text">
	<% if @user.current_cycle.shared %>
	<div id="share_it" class="share_it" >
		<% share_link = "www.chartmycycles.com/share/cycle/#{current_user.current_cycle.id}"%>
		This cycle is shared at: <b><%= link_to share_link, "http://www.chartmycycles.com/share/cycle/#{current_user.current_cycle.id}" %></b><br />
	</div>
	<% end %>
<div id="graph">
	<% if @user.current_cycle.entries.count >= 1%>
		<%= @graph %>
	<% else %>
		<% if @user.cycles.count <= 1 %>
			<%= render :partial => 'new_user_graph_pointers'%>
		<% else %>
			<%= render :partial => 'new_cycle_message'%>
		<% end %>
	<% end %>
</div>
</div>

	<% if @user.current_cycle.entries.count > 0 %>
		<% if @fertile_toggle == 1 %>
			<div id="fertile_toggle_red" class="toggle_text">
				<h2>You are probably fertile right now.</h2> <%= link_to_function("more...",
				"Element.toggle('fertile_more')") %> <br />
				<div id="fertile_more" style="font-size: 1em; display: none;">
					this is more information about you being probably fertile.
				</div>
			</div>
		<% elsif @fertile_toggle == 0 %>
			<div id="fertile_toggle_purple" class="toggle_text">
				<h2>You are probably infertile right now.</h2> <%= link_to_function("more...",
				"Element.toggle('infertile_more')") %> <br />
				<div id="infertile_more" style="font-size: 1em; display: none;">
					this is more information about you being probably fertile.
				</div>
			</div>
		<% elsif @fertile_toggle == 2 %>
			<div id="fertile_toggle_orange" class="toggle_text">
				<h2>You may be fertile right now.</h2> <%= link_to_function("more...",
				"Element.toggle('maybe_more')")%> <br />
				<div id="maybe_more" style="font-size: 1em; display: none;">
					this is more information about you being probably fertile.
				</div>
			</div>
		<% end %>
	<% end %>
	

	<% if @user.cycles.count == 1 && @user.current_cycle.entries.count == 1 %>
		<%= render :partial => 'first_entry' %>
	<% elsif @user.cycles.count == 1 && @user.current_cycle.entries.count == 2 %>
		<%= render :partial => 'second_entry'%>
	<% elsif @user.cycles.count == 1 && @user.current_cycle.entries.count == 3%>
		<%= render :partial => 'third_entry'%>
	<% elsif @user.cycles.count == 1 && @user.current_cycle.entries.count == 4%>
		<%= render :partial => 'fourth_entry'%>
	<% elsif @user.cycles.count == 1 && @user.current_cycle.entries.count == 5%>
		<%= render :partial => 'fifth_entry'%>
			<% elsif @user.cycles.count == 1 && @user.current_cycle.entries.count == 23%>
				<%= render :partial => 'twenty_third_entry'%>
	<% end %>

	<%= render :partial => 'vertical_cal'%>
	<br />
	<br />
</div>
</div>
<div id="leftcolumn">
	<%= render :partial => 'left_column'%>
</div>
<div id="leftcolumncurve">
	</div>

				
